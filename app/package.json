{
  "name": "bloom-desktop-pilot",
  "productName": "Bloom Desktop",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": ".webpack/main",
  "engines": {
    "node": ">=18.0.0 <21.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "gen-types": "supabase gen types typescript --local > src/types/database.types.ts",
    "start": "electron-forge start",
    "ts-start": "ts-node ./forge.config.ts && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "client:generate": "npx prisma generate",
    "client:watch": "npm run client:generate --watch",
    "db:generate": "npx prisma migrate dev --create-only",
    "db:deploy": "npx prisma migrate deploy"
  },
  "keywords": [],
  "author": {
    "name": "Dan Butler",
    "email": "daniel.jaffe.butler@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.7",
    "autoprefixer": "^10.4.17",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.0.0",
    "electron": "28.2.2",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "happy-dom": "^12.10.3",
    "jsdom": "^26.1.0",
    "node-loader": "^2.0.0",
    "playwright": "^1.55.0",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.0",
    "prettier": "^3.6.2",
    "style-loader": "^3.0.0",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.4",
    "vite": "^4.5.14",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "@prisma/migrate": "^5.16.1",
    "@salk-hpi/bloom-fs": "^0.2.0",
    "@salk-hpi/bloom-js": "^0.2.0",
    "@supabase/supabase-js": "^2.39.6",
    "@types/better-sqlite3": "^7.6.9",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.20",
    "@types/uuid": "^9.0.8",
    "better-sqlite3": "^9.4.1",
    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.0",
    "electron-winstaller": "^5.2.2",
    "js-yaml": "^4.1.0",
    "p-limit": "^6.2.0",
    "prisma": "^5.16.1",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-drag-drop-files": "^3.0.1",
    "react-router-dom": "^6.22.0",
    "sharp": "^0.33.2",
    "zod": "^3.22.4"
  }
}
